<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".Activity.Home">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="140dp"

            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:id="@+id/unread"
            android:layout_marginRight="20dp"



            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:gravity="center"

                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/request"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request"
                    android:textSize="16dp"
                    android:layout_marginTop="7dp"
                    android:textColor="#fefefe"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="140dp"
            app:cardCornerRadius="12dp"


            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:id="@+id/read"
            android:layout_marginLeft="20dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:gravity="center"


                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/whearhouse"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WireHouse"
                    android:textSize="16dp"
                    android:layout_marginTop="7dp"
                    android:textColor="#fefefe"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="140dp"

            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:id="@+id/inwire"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="12dp"



            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:gravity="center"


                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/destination"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textSize="16dp"
                    android:layout_marginTop="7dp"
                    android:textColor="#fefefe"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="140dp"

            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:id="@+id/todes"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="12dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:gravity="center"


                >

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cod"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cod Payment"
                    android:textSize="16dp"
                    android:layout_marginTop="7dp"
                    android:textColor="#fefefe"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="140dp"

            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:id="@+id/toda_money"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="12dp"



            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:gravity="center"


                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/today"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="16dp"
                    android:layout_marginTop="7dp"
                    android:textColor="#fefefe"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="140dp"

            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:id="@+id/driver_salary"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="12dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:gravity="center"


                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/salary"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver Salary"
                    android:textSize="16dp"
                    android:layout_marginTop="7dp"
                    android:textColor="#fefefe"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

            </LinearLayout>



        </androidx.cardview.widget.CardView>



    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"

                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                android:id="@+id/analysis"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="12dp"



                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#4CAF50"
                    android:gravity="center"


                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/detail"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analysis"
                        android:textSize="16dp"
                        android:layout_marginTop="7dp"
                        android:textColor="#fefefe"
                        android:textAlignment="center"
                        android:textStyle="bold"

                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"

                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                android:id="@+id/logout"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="12dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#4CAF50"
                    android:gravity="center"


                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/logout"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log Out"
                        android:textSize="16dp"
                        android:layout_marginTop="7dp"
                        android:textColor="#fefefe"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </LinearLayout>

</ScrollView>


